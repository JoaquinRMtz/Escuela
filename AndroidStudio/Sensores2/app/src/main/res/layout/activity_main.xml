<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="i0akinsec.wordpress.com.sensores2.MainActivity">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <Button android:id="@+id/btnSensores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSensor"
        android:layout_below="@id/imgView"
        android:layout_margin="@dimen/btnMargin"
        android:onClick="abrirListSensor"/>

    <Button android:id="@+id/btnProximidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSensores"
        android:layout_margin="@dimen/btnMargin"
        android:text="@string/btnProximity"
        android:onClick="abrirSensorProximity"/>

    <Button android:id="@+id/btnBrujula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/btnSensores"
        android:layout_below="@id/imgView"
        android:layout_margin="@dimen/btnMargin"
        android:text="@string/btnBrujula"
        android:onClick="abrirBrujula"/>

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnBrujula"
        android:layout_toEndOf="@id/btnProximidad"
        android:layout_margin="@dimen/btnMargin"
        android:text="@string/btnExit"
        android:onClick="salir"/>


</RelativeLayout>
